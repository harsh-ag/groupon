<fieldset >
  <legend>Location</legend>
  <div class="form-group row">
    <%= f.label :address, 'Address: ', class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <%= f.label :city, 'City: ', class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <%= f.label :state, 'State: ', class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <%= f.label :country, 'Country: ', class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <br>
      <%= f.select(:country, @countries_list, class: "btn btn-mini") %>
    </div>
  </div>
  <%= f.link_to_remove "Remove", class: "pull-right" %>
</fieldset>