<div class = 'row' >
  <div class = "well col-lg-6 col-lg-offset-2">
    <%= form_tag(redeem_merchant_coupons_path, method: :post, class: 'form-horizontal') do %>
    <fieldset>
      <legend class="text-center">Enter Your Coupon Code</legend>
      <div class="form-group">
        <%= label_tag :code, 'Code:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= text_field_tag :code, params[:code], class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= submit_tag 'Submit', class: 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>