<div class = 'row' >
  <div class = "well col-lg-6 col-lg-offset-2">
    <%= form_for @user, :html=> { class: 'form-horizontal' } do |f| %>
    <fieldset>
      <legend class="text-center"><h2>Sign Up</h2></legend>
      <div class="form-group">
        <%= f.label :first_name, 'First Name:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :first_name, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, 'Last Name:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :last_name, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Email:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.password_field :password, class: 'form-control', required: true%>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
        </div>
      </div> <br>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Sign Up", class: 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>