<div class = 'row' >
  <div class = "well col-lg-6 col-lg-offset-2">
    <%= form_tag(password_request_path, method: :post, class: 'form-horizontal') do %>
    <fieldset>
      <legend class="text-center">Enter Your Email ID</legend>
      <div class="form-group">
        <%= label_tag :email, 'Email:', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= email_field_tag :email, params[:email], class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= submit_tag "Submit", class: 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>